{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express TypeScript TypeORM backend",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "lint": "eslint src --fix",
    "build": "tsc",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm migration:generate -- -d src/data-source.ts",
    "migration:run": "npm run typeorm migration:run -- -d src/data-source.ts"
  },
  "dependencies": {
    "@types/node": "^22.13.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "nodemon": "^3.1.9",
    "pg": "^8.13.2",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.20",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/express": "^5.0.0",
    "eslint": "^9.20.1",
    "globals": "^15.14.0",
    "typescript-eslint": "^8.24.0"
  }
}
