{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express TypeScript TypeORM backend",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "lint": "eslint src --fix",
    "build": "tsc",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm migration:generate -- -d src/db/data-source.ts",
    "migration:run": "npm run typeorm migration:run -- -d src/db/data-source.ts",
    "seed": "ts-node -r tsconfig-paths/register src/db/seeds/InitSeeder.ts"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.13.1",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "nodemon": "^3.1.9",
    "path": "^0.12.7",
    "pg": "^8.13.2",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.6.3",
    "typescript": "^5.7.3",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/express": "^5.0.0",
    "eslint": "^9.20.1",
    "globals": "^15.14.0",
    "typescript-eslint": "^8.24.0"
  }
}
